<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:cardCornerRadius="4dp"
        android:id="@+id/cardView"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/clickableLayout"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:background="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Time"
                        android:id="@+id/tvTime"
                        android:textSize="20dp"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Lesson name"
                        android:id="@+id/tvLessonName"
                        android:gravity="center|left"
                        android:layout_weight="0.3"
                        android:textSize="18dp"
                        android:padding="5dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_weight="0.3"
                        android:layout_height="wrap_content"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Auditory name"
                            android:id="@+id/tvAuditoryName"
                            android:padding="5dp"
                            android:layout_weight="0.1"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Lesson type"
                            android:id="@+id/tvLessonType"
                            android:padding="5dp"
                            android:layout_weight="0.4"
                            android:textSize="12dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Half group"
                            android:id="@+id/tvHalfGroup"
                            android:padding="5dp"
                            android:layout_weight="0.4"
                            android:textSize="12dp"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Teacher name"
                        android:layout_weight="0.3"
                        android:id="@+id/tvTeachName"
                        android:padding="5dp"
                        android:textSize="12dp"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/hiddenLayout"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Цвет:"
                        android:id="@+id/tvColor"
                        android:padding="5dp"
                        android:gravity="center" />

                    <Space
                        android:layout_width="5dp"
                        android:layout_height="match_parent"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/color1"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@color/colorPick_1"
                        android:padding="5dp" />

                    <Space
                        android:layout_width="5dp"
                        android:layout_height="match_parent"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/color2"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@color/colorPick_2"
                        android:padding="5dp" />

                    <Space
                        android:layout_width="5dp"
                        android:layout_height="match_parent"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/color3"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@color/colorPick_3"
                        android:padding="5dp" />
                    <Space
                        android:layout_width="5dp"
                        android:layout_height="match_parent"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/color4"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@color/colorPick_4"
                        android:padding="5dp" />
                    <Space
                        android:layout_width="5dp"
                        android:layout_height="match_parent"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/color5"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@color/colorPick_5"
                        android:padding="5dp" />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText"
                    android:editable="true"
                    android:hint="Введите краткую заметку" />


            </LinearLayout>



        </LinearLayout>

    </android.support.v7.widget.CardView>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="5dp" />




</LinearLayout>